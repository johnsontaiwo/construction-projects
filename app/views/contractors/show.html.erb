<h3>Name:<%=@contractor.name%></h3>

<h3> Address: <%= @contractor.address %></h3>
   
<h3> Email: <%= @contractor.email %></h3>
  
<h3> Group: <%= @contractor.group %></h3>
   </br><br>

<% if user_signed_in? %>

<h5>Listed below is the list of our current projects in progress:</h5>
  <% @projects.each do |project| %>
  <%= link_to "#{project.title}", project_path(project)%>
  <% end %>

<% end %><br></br> 

<% if current_user.admin?%>

  <%= link_to "Edit contractor", edit_contractor_path(@contractor)  %><br></br>
  <%= link_to "Delete contractor", contractor_path(@contractor), :data => {:confirm => "Are You sure?", :method => "delete"}%>

<%end%>