<%= form_for @project do |f| %>

<% if @project.errors.full_messages.any? %>
  <% @project.errors.full_messages.each do |error_message| %>
    <%= error_message if @project.errors.full_messages.first == error_message %> <br />
  <% end %>
<% end %>

<%= f.label :title %>
<%= f.text_field :title %><br /></br>


<%= f.label :category %>

<%= f.text_field :category %><br /></br>

<%= f.label :contract_number %>
<%= f.text_field :contract_number %><br /></br>

<%= f.label :solicitation_number %>
<%= f.text_field :solicitation_number %><br /></br>


<%= f.label :project_officer %>
<%= f.text_field :project_officer %><br /></br>

<%= f.label :project_start_date %>
<%= f.datetime_field :project_start_date %>
<br /></br>

<%= f.label :project_end_date %>
<%= f.datetime_field :project_end_date %><br /></br>



<%= f.label :substantial_completion_date %>

<%= f.datetime_field :substantial_completion_date %>
><br /></br>

<%= f.label :contract_amount %>
<%= f.text_field :contract_amount %></br></br>

<%= f.label :location %>
<%= f.text_field :location %><br></br>

        <h3>Contractor's information</h3>
<%= f.fields_for :contractors, @project.contractors.build do |contractor_fields| %>
<%= contractor_fields.label :name %>
<%= contractor_fields.text_field :name %><br></br>

<%= contractor_fields.label :address %>
<%= contractor_fields.text_area :address %><br></br>

<%= contractor_fields.label :telephone %>
<%= contractor_fields.telephone_field :telephone %>
<p><strong>Category:</strong>
<%= select_tag "category", options_for_select(["Prime", "Sub"]), include_blank: true %></p>
<% end %><br></br>

<%= f.submit "Create a new project" %><br />

<% end %>


